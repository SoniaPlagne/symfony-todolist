<body>

    <div class="container">
        <div class="row">
        <div class="one-half column">
            <h4>Créer un nouveau projet</h4>
        </div>
        </div>

{% for label,message in app.flashes%}
    {% for message in messages%}
        <div class ="row">
            <div class ="column">
                <h3>{{label}}</h3>
                <p>{{message}}</p>
            </div>
        </div>
    {%endfor%}
{%endfor%}




        <form action="/projects/save" method="POST">
            <div class="row">            
                <div class="two columns">
                    <label for="name">Nom du projet</label>
                </div>
                <div class="ten columns">
                    <input class="u-full-width" type="text" id="name" name="name">
                </div>
            </div>

            <div class="row">     
                <div class="two columns">
                    <label for="description">Description</label>
                </div>
                <div class="ten columns">
                    <input class="u-full-width" type="text" id="description" name="description">
                </div>
            </div>

            <div class="row">    
                <div class="two columns">
                    <label for="start-date">Date de début</label>
                </div>
                <div class="ten columns">
                    <input class="u-full-width" type="text" id="start_date" name="start_date">
                </div>
            </div>

            <div class="row">    
                <div class="two columns">
                    <label for="end-date">Date de fin</label>
                </div>
                <div class="ten columns">
                    <input class="u-full-width" type="text" id="end_date" name="end_date">
                </div>
            </div>

            <a class="button button-primary" href="/projects">Retour</a>

            <input class="button-primary" type="submit" value="Save">
        
        </form>   
    </div>           
                



